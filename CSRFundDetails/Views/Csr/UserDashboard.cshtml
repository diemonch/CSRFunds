@model IEnumerable<CSRFundDetails.Models.CsrFund>

<h2>CSR Fund List</h2>

<table class="table">
    <thead>
        <tr>
            <th>S.No</th>
            <th>Organization</th>
            <th>Opening Balance</th>
            <th>CSR Fund Allotted</th>
            <th>Projected Expenditure</th>
            <th>CSR Fund Balance</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="7">No CSR Fund data available.</td>
            </tr>
        }
        else
        {
            int index = 1;
            @foreach (var fund in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@fund.OrganizationName ?? "N/A"</td>
                    <td>@(fund.OpeningBalance.HasValue ? fund.OpeningBalance.Value.ToString("F2") : "0")</td>
                    <td>@(fund.CsrFundAlloted.HasValue ? fund.CsrFundAlloted.Value.ToString("F2") : "0")</td>
                    <td>@(fund.ProjectedExpenditure.HasValue ? fund.ProjectedExpenditure.Value.ToString("F2") : "0")</td>
                    <td>@(fund.CsrFundBalance.HasValue ? fund.CsrFundBalance.Value.ToString("F2") : "0")</td>
                    <td>
                        <a href="@Url.Action("Edit", "Csr", new { id = fund.OrganizationId })">Edit</a>
                    </td>
                </tr>
                index++;
            }
        }
    </tbody>
</table>